<Avatar@RelativeLayout>:
    size: (45, 45)
    size_hint: (None, None)
    source: root.source
    
    MDCard:
        size: root.size
        size_hint: (None, None)
        radius: [root.width/2, ]  
        md_bg_color: app.theme_cls.accent_color
        elevation: 0
        pos_hint: {'center_x': .5, 'center_y': .5}

    FitImage:
        size: root.size[0] - 3, root.size[1] - 3
        radius: [root.width/2, ]  
        size_hint: (None, None)
        source: root.source
        pos_hint: {'center_x': .5, 'center_y': .5}
