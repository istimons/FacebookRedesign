<StoryWithImage>:
    orientation: 'vertical'
    size: (60, 140)
    size_hint: (None, None)
    spacing: 5
    width: avatar.width
    
    FitImage:
        id: avatar
        source: root.source
        pos_hint: {'center_x':.5}
        # fit_mode: "cover"
        # allow_stretch: True
        # keep_ration: False
        radius: [9, ]

    MDLabel: 
        text: root.text
        size: self.texture_size
        theme_text_color: 'Custom'
        text_color: '#000000'
        size_hint_y: None
        # size_hint_x: None
        halign: 'center'
        font_size: '11sp'
        # color: [1, 1, 1, 1]
        bold: True

<StoryWithIcon@MDBoxLayout>:
    orientation: 'vertical'
    size: (90, 180)
    size_hint: (None, None)
    spacing: 5
    MDIconButton: 
        icon: 'account'
        pos_hint: {'center_x': .5}
        text_color: [1, 1, 1, 1]
        # md_bg_color: app.theme_cls.accent_color
        user_font_size: 18
        size: (45, 70)
        size_hint: (None, None)

    MDLabel: 
        text: 'Create Story'
        size: self.texture_size
        theme_text_color: 'Custom'
        text_color: '#000000'
        size_hint_y: None
        # size_hint_x: None
        halign: 'center'
        font_size: '11sp'
        bold: True