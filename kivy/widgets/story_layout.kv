<StoryWithImage>:
    orientation: 'vertical'
    size: dp(60), dp(140)
    size_hint: (None, None)
    spacing: dp(5)
    width: avatar.width
    
    FitImage:
        id: avatar
        source: root.source
        pos_hint: {'center_x':.5}
        radius: [9, ]

    MDLabel: 
        text: root.text
        size: self.texture_size
        theme_text_color: 'Custom'
        text_color: '#000000'
        size_hint_y: None
        halign: 'center'
        font_size: '11sp'
        bold: True

<StoryWithIcon@MDBoxLayout>:
    orientation: 'vertical'
    size: dp(90), dp(180)
    size_hint: (None, None)
    spacing: dp(5)
    MDIconButton: 
        icon: 'account'
        pos_hint: {'center_x': .5}
        text_color: [1, 1, 1, 1]
        user_font_size: dp(18)
        size: dp(45), dp(70)
        size_hint: (None, None)

    MDLabel: 
        text: 'Create Story'
        size: self.texture_size
        theme_text_color: 'Custom'
        text_color: '#000000'
        size_hint_y: None
        halign: 'center'
        font_size: '11sp'
        bold: True