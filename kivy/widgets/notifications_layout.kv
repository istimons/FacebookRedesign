<NotificationLayout>:
    adaptive_height: True
    orientation: 'horizontal'
    size_hint: (1, None)
    spacing: dp(0)
    padding: [0, 0, 0, 10]

    NotificationListItem:
        company_name: '{}'.format(root.company_name) 
        company_image: '{}'.format(root.company_image)
        time_received: '{}'.format(root.time_received)
        notification_content: '{}'.format(root.notification_content)


<NotificationListItem@MDCard>:
    ripple_behavior: True
    md_bg_color: 0, 0, 0, 0
    elevation: 0
    size_hint_y: None
    padding: [10, 0, 20, 0]
    spacing: dp(10)
    height: chatAvatar.height + 10
    company_name: 'Lorem Ipsum'
    company_image: 'assets/images/1.jpg'
    time_received: 'Lorem Ipsum'
    notification_content: 'Niaje wasee?'


    Avatar:
        id: chatAvatar
        source: root.company_image
        pos_hint: {"center_y": .5}
        radius: [20, ]
        size_hint: (None, None)
        size: dp(80), dp(80)

    MDBoxLayout:
        orientation: "vertical"
        padding: [0, 0, 0, 10]
        spacing: dp(2)     
        pos_hint: {"center_y": .5}
        adaptive_height: True


        Label:
            text: '{} reacted to a post that you \n shared: "{}"'.format(root.company_name, root.notification_content)
            markup: True
            theme_text_color: 'Custom'
            size: self.texture_size
            size_hint_y: None
            size_hint_x: None
            font_size: dp(15)
            color: app.theme_cls.opposite_bg_normal
            bold: True
            
        Label:
            text: '{}'.format(root.time_received)
            size: self.texture_size
            theme_text_color: 'Custom'
            size_hint_y: None
            size_hint_x: None
            bold: True
            font_size: dp(13)
            color: [.5, .5, .5, 1]        

                        
    MDIcon:
        icon: 'dots-horizontal'
        md_bg_color: 0, 0, 0, 0
        size_hint: None, None   
        size: dp(0.01), dp(0.01)
        radius: [12,]
        badge_icon: "numeric-10"
