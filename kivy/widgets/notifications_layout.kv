<NotificationLayout>:
    adaptive_height: True
    orientation: 'horizontal'
    size: (360, 45)
    size_hint: (None, None)
    spacing: 0
    padding: [0, 0, 0, 10]

    NotificationListItem:
        company_name: '{}'.format(root.company_name) 
        company_image: '{}'.format(root.company_image)
        time_received: '{}'.format(root.time_received)
        notification_content: '{}'.format(root.notification_content)


<NotificationWithIcon@MDBoxLayout>:
    orientation: 'vertical'
    size: dp(355), dp(75)
    size_hint: (None, None)
    spacing: 2
    # md_bg_color: 'red'

    MDTopAppBar: 
        height: dp(50)
        title: "[color=#000000]Friends[/color]"
        bold: True            
        text_size: self.size
        font_size: '15sp'
        markup: True
        anchor_title: 'left'
        right_action_items: [['search-web', lambda x: x]]    
        margin: 0
        md_bg_color: 'lightgrey'
        elevation: 0

        # MDRoundFlatButton:
        #     text: 'Your Friends'
        #     line_color: 'lightgray'
        #     md_bg_color: 'gray'
        #     text_color: 'black'
        #     size_hint_x: dp(0.3)        
   

<NotificationListItem@MDCard>:
    ripple_behavior: False
    md_bg_color: 0, 0, 0, 0
    elevation: 0
    size_hint_y: None
    # padding: [10, 0, 10, 0]
    spacing: 10
    height: chatAvatar.height + 10
    company_name: 'Lorem Ipsum'
    company_image: 'assets/images/1.jpg'
    time_received: 'Lorem Ipsum'
    notification_content: 'Niaje wasee?'
    # md_bg_color: "red"


    Avatar:
        id: chatAvatar
        source: root.company_image
        pos_hint: {"center_y": .5}
        radius: [20, ]
        size_hint: (None, None)
        size: (80, 80)

    MDBoxLayout:
        orientation: "vertical"
        padding: [0, 0, 0, 10]
        spacing: 2     
        pos_hint: {"center_y": .5}
        # md_bg_color: 'blue'          
        # size_hint_y: dp(.0.5)
        adaptive_height: True


        Label:
            text: '{} reacted to a post that you \n shared: "{}"'.format(root.company_name, root.notification_content)
            markup: True
            theme_text_color: 'Custom'
            size: self.texture_size
            size_hint_y: None
            size_hint_x: None
            font_size: 15
            color: app.theme_cls.opposite_bg_normal
            bold: True
            
        Label:
            text: '{}'.format(root.time_received)
            size: self.texture_size
            theme_text_color: 'Custom'
            size_hint_y: None
            size_hint_x: None
            bold: True
            font_size: 13
            color: [.5, .5, .5, 1]        

                        
    MDIcon:
        icon: 'dots-horizontal'
        pos_hint: {"center_x": 0.6, "center_y": .8}
        md_bg_color: 0, 0, 0, 0
        size_hint: None, None   
        size: dp(0.01), dp(0.01)
        radius: [12,]
        badge_icon: "numeric-10"
        pos_hint: {"center_x": .5, "center_y": .5}        
