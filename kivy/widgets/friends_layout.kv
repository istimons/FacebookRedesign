<FriendsLayout>:
    adaptive_height: True
    orientation: 'horizontal'
    size_hint: (1, None)
    spacing: dp(0)
    padding: [0, 0, 0, 10]


    FriendsListItem:
        friend_name: '{}'.format(root.text) 
        mutual_friends_label: '{}'.format(root.mutual_friends)
        friend_avatar: '{}'.format(root.source)
        friend_request_initial_time: '{}'.format(root.friend_request_initial_time)
     

<FriendsListItem@MDCard>:
    md_bg_color: 0, 0, 0, 0
    elevation: 0
    size_hint_y: None
    padding: [5, 0, 5, 0]
    spacing: dp(10)
    height: chatAvatar.height + 10
    friend_name: 'Lorem Ipsum'
    mutual_friends_label: 'Jan 14, 11:26 PM'
    friend_avatar: 'assets/images/1.jpg'
    friend_request_initial_time: 'Niaje Wasee?'   


    Avatar:
        id: chatAvatar
        source: root.friend_avatar
        pos_hint: {"center_y": .5}
        radius: [20, ]
        size_hint: (None, None)
        size: dp(70), dp(70)



    MDBoxLayout:
        orientation: "vertical"
        padding: [0, 0, 0, 10]
        spacing: dp(2)     
        pos_hint: {"center_y": .5}
        adaptive_height: True

        Label:
            text: '{}'.format(root.friend_name)
            markup: True
            theme_text_color: 'Custom'
            size: self.texture_size
            size_hint_y: None
            size_hint_x: None
            font_size: dp(15)
            color: app.theme_cls.opposite_bg_normal
            bold: True
            
        Label:
            text: '{}'.format(root.mutual_friends_label)
            size: self.texture_size
            theme_text_color: 'Custom'
            size_hint_y: None
            size_hint_x: None
            bold: True
            font_size: dp(13)
            color: [.5, .5, .5, 1]     


    MDGridLayout:
        cols: 2
        rows: 2

        Widget:
        
        MDLabel:
            text: '{}'.format(root.friend_request_initial_time)
            halign: 'right'

        MDFlatButton:
            text: 'Confirm'
            halign: 'center'
            md_bg_color: 'blue'
            theme_text_color: 'Custom'
            text_color: 'white'
            size_hint_x: dp(1)

        MDFlatButton:
            text: 'Delete'
            halign: 'center'
            md_bg_color: 'lightgray'
            theme_text_color: 'Custom'
            text_color: 'black'
            size_hint_x: dp(1)
            



