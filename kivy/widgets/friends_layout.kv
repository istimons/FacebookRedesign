<FriendsLayout>:
    adaptive_height: True
    orientation: 'horizontal'
    size: (360, 45)
    size_hint: (None, None)
    spacing: 0
    padding: [0, 0, 0, 10]

    FriendsListItem:
        friend_name: '{}'.format(root.text) 
        mutual_friends_label: '{}'.format(root.mutual_friends)
        friend_avatar: '{}'.format(root.source)
        friend_request_initial_time: '{}'.format(root.friend_request_initial_time)


<FriendWithIcon@MDBoxLayout>:
    orientation: 'vertical'
    size: dp(355), dp(75)
    size_hint: (None, None)
    spacing: 2
    # md_bg_color: 'red'

    MDTopAppBar: 
        height: dp(50)
        title: "[color=#000000]Friends[/color]"
        bold: True            
        text_size: self.size
        font_size: '15sp'
        markup: True
        anchor_title: 'left'
        right_action_items: [['search-web', lambda x: x]]    
        margin: 0
        md_bg_color: 'lightgrey'
        elevation: 0

        MDRoundFlatButton:
            text: 'Your Friends'
            line_color: 'lightgray'
            md_bg_color: 'gray'
            text_color: 'black'
            size_hint_x: dp(0.3)        
   


<FriendsListItem@MDCard>:
    ripple_behavior: False
    md_bg_color: 0, 0, 0, 0
    elevation: 0
    size_hint_y: None
    padding: [10, 0, 10, 0]
    spacing: 10
    height: chatAvatar.height + 10
    friend_name: 'Lorem Ipsum'
    mutual_friends_label: 'Jan 14, 11:26 PM'
    friend_avatar: 'assets/images/1.jpg'
    friend_request_initial_time: 'Lorem Ipsum'


    Avatar:
        id: chatAvatar
        source: root.friend_avatar
        pos_hint: {"center_y": .5}
        radius: [250, ]
        size_hint: (None, None)
        size: (70, 90)

    MDBoxLayout:
        orientation: "vertical"
        padding: [0, 0, 0, 10]
        spacing: 2


        Label:
            text: root.friend_name
            theme_text_color: 'Custom'
            size: self.texture_size
            size_hint_y: None
            size_hint_x: None
            font_size: 15
            color: app.theme_cls.opposite_bg_normal
            bold: True
            
        Label:
            text: '{}'.format(root.mutual_friends_label)
            size: self.texture_size
            theme_text_color: 'Custom'
            size_hint_y: None
            size_hint_x: None
            bold: True
            font_size: 13
            color: [.5, .5, .5, 1]        

        MDGridLayout:
            cols: 2
            spacing: "12dp"
            padding: "12dp"
            adaptive_height: True

            MDFlatButton:
                text: 'Confirm'
                halign: 'center'
                md_bg_color: 'blue'
                theme_text_color: 'Custom'
                text_color: 'white'
                size_hint_x: dp(1)

            MDFlatButton:
                text: 'Delete'
                halign: 'center'
                md_bg_color: 'lightgray'
                theme_text_color: 'Custom'
                text_color: 'black'
                size_hint_x: dp(1)

 
    MDLabel:
        text: '{}'.format(root.friend_request_initial_time)
        # size: self.texture_size
        markup:True
        theme_text_color: 'Custom'
        text_color: 'lightgray'
        pos_hint: {"center_x": .7, "center_y": .8}
        size_hint: dp(0.2), dp(0.2)   
        bold: True
        # font_size: '10sp'
