<PostListItem>:
    orientation: 'vertical'
    size_hint: (1, 1)
    adaptive_height: True
   

    MDBoxLayout:
        size_hint_y: None
        height: dp(60)

        spacing: dp(5)
        md_bg_color: 'lightgrey'      
        padding: [0, 0, 10, 0]

        MDLabel:
            size_hint: (None, None)
            pos_hint: {'center_y':.5}
            size: dp(0.01), dp(30)

        Avatar:
            source: root.company_avatar
            pos_hint: {"center_y": .5}
            radius: [30, ]
        MDBoxLayout:
            orientation: "vertical"
            padding: 0, 0, 0, "20dp" 
            spacing: dp(2)
            Label:
                markup: True
                text: '[color=#ff0000ff]{} . Follow[/color]'.format(root.company_name)
                theme_text_color: 'Custom'
                size: self.texture_size
                size_hint_y: None
                size_hint_x: None
                font_size: '15sp'
                color: app.theme_cls.opposite_bg_normal
                bold: True

            MDLabel:
                text: 'Suggested for you. {}'.format(root.timestamp)
                height: self.texture_size[1]
                theme_text_color: 'Custom'
                size_hint_y: None
                bold: True
                font_size: '12sp'
                color: [.5, .5, .5, 1] 
                shorten: True
                markup: True
                shorten_from: 'right'  
                icon: 'earth'  

        MDBoxLayout:
            size_hint_x: dp(1)
            padding: 0, 0, 0, "26dp"   
            

            Widget:
            Widget:
            Widget:
            Widget:            

                
            MDIconButton:
                icon: 'dots-horizontal'
                size_hint: (None, None)
                pos_hint: {'center_y':.5, "center_x": .7}
                size: dp(1), dp(10)
                padding: 0
            MDIconButton:
                icon: 'close'
                size_hint: (None, None)
                pos_hint: {'center_y':.5, "center_x": .9}
                size: dp(1), dp(10)
                padding: 0


    MDCard:
        ripple_behavior: True
        md_bg_color: 0, 0, 0, 0
        size_hint_y: None
        size: dp(1), dp(350)
        spacing: dp(2)

        FitImage:
            source: root.company_avatar
            pos_hint: {'center_x':.5}

    PostsBottomContent:
        md_bg_color: 'lightgrey'
                    

  