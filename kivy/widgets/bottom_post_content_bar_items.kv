<PostsBottomContent@MDBoxLayout>:
    orientation: 'vertical'
    size_hint_y: None    
    
    MDCard:
        md_bg_color: 'lightgrey'
        size_hint: (1, 1)
        pos_hint: {'center_x': .5}      

               
        NavIcon:
            text_color: "red"
            icon: 'heart'

        MDLabel:
            text: '9K'
            size_hint_x: 0.3
            font_size: '9sp'             

        MDLabel:
            text: '7K comments . 45 shares'
            size_hint_x: 0.2
            font_size: '9sp'


    MDSeparator:
        md_bg_color: 'grey'
        
    MDCard:
        md_bg_color: 'lightgrey'
        size_hint: (1, 1)
        pos_hint: {'center_x': .5}       

               
        NavIcon:
            text_color: "red"
            icon: 'thumb-up'
            text: 'Like'
            theme_text_color: 'Custom'            
            text_color: 'black'
            font_size: '9sp'
            

        NavIcon:
            text_color: "black"
            icon: 'comment'
            text: 'Comment'

        NavIcon:
            text_color: "black"
            icon: 'share'
            text: 'Share'



<NavIcon@MDIconButton>:
    pos_hint: {'center_y': .5}
    theme_text_color: 'Custom'
    size_hint_x: dp(.1)
    user_font_size: dp(2)
    size: dp(10), dp(15)

        

