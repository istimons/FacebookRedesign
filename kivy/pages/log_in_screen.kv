<LogInScreen>:

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(16)

        MDLabel:
            text: 'Welcome to Facebook'
            halign: 'center'
            bold: True
            font_size: '14sp'
            theme_text_color: 'Secondary'
            size_hint_y: None
            height: self.texture_size[1] + dp(15)

        ScrollView:

            do_scroll_y: True
            effect_cls: 'ScrollEffect'
            bar_width: dp(2)
            size_hint: None, 1
            padding: dp(8),dp(8),dp(8),dp(8)
            pos_hint: {"center_x": .5, "center_y": .6}
            size: dp(300), dp(350)        

            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                spacing: dp(2)

                ChooseLogInUserType:
                ChooseLogInUserType2:


<ChooseLogInUserType@MDBoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: dp(300) 
    spacing: dp(10)
    radius: [dp(10)]

    MDIconButton:
        icon: 'account-group'
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        size_hint: None, None
        size: dp(56), dp(56)

    MDLabel:
        halign: 'center'
        valign: 'center'
        text: 'Sign in as an Organization'
        font_size: '18sp'
        theme_text_color: 'Primary'
        size_hint_y: None
        height: self.texture_size[1] + dp(10)

    MDLabel:
        halign: 'center'
        valign: 'center'
        text: 'Reach new friends on this platform, post products/ads & interact with the world all together for free'
        theme_text_color: 'Secondary'
        font_size: '14sp'
        size_hint_y: None
        height: self.texture_size[1] + dp(20)

    MDFillRoundFlatButton:
        text: 'Proceed'
        md_bg_color: app.theme_cls.primary_color
        theme_text_color: 'Custom'
        text_color: 'white'
        size_hint: None, None
        width: dp(120)
        height: dp(36)
        on_release: app.switch_screen('org_login_screen')
        pos_hint: {"center_x": .5}


<ChooseLogInUserType2@MDBoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: dp(300) 
    spacing: dp(10)
    radius: [dp(10)]

    MDIconButton:
        icon: 'account'
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        size_hint: None, None
        size: dp(56), dp(56)

    MDLabel:
        halign: 'center'
        valign: 'center'
        text: 'Sign in as an Individual'
        font_size: '18sp'
        theme_text_color: 'Primary'
        size_hint_y: None
        height: self.texture_size[1] + dp(10)

    MDLabel:
        halign: 'center'
        valign: 'center'
        text: 'Reach Organizations Insights on this platform to know more, get products & genuine Feedback'
        theme_text_color: 'Secondary'
        font_size: '14sp'
        size_hint_y: None
        height: self.texture_size[1] + dp(20)

    MDFillRoundFlatButton:
        text: 'Proceed'
        md_bg_color: app.theme_cls.primary_color
        theme_text_color: 'Custom'
        text_color: 'white'
        size_hint: None, None
        width: dp(120)
        height: dp(36)
        on_release: app.switch_screen('ind_log_in_screen')
        pos_hint: {"center_x": .5}

