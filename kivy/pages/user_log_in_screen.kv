<IndividualLogInScreen>:       
    MDBoxLayout:
        orientation: 'vertical'
            
        MDTopAppBar:
            title: "Facebook"
            left_action_items: [['menu', lambda x: x]]            
            elevation: dp(5)

            
        ScrollView:
            do_scroll_y: True
            bar_width: dp(4)
            pos_hint: {"center_y": .5}

            
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(10)
                size_hint_y: dp(1)
                
                MDLabel:
                    text: "Create your account"
                    theme_text_color: "Primary"
                    halign: 'center'
                    font_style: 'H5'
                        
                MDTextField:
                    hint_text: "Public profile name"
                    helper_text: "Name"
                    helper_text_mode: "persistent"
                        
                MDTextField:
                    hint_text: "Public contact"
                    helper_text: "Phone No"
                    helper_text_mode: "persistent"
                        
                MDTextField:
                    hint_text: "Public email"
                    helper_text: "Email"
                    helper_text_mode: "persistent"
                        
                MDTextField:
                    hint_text: "Bio"
                    helper_text: "About your organization"
                    helper_text_mode: "persistent"
                        
                MDTextField:
                    hint_text: "Portfolio"
                    helper_text: "Website/public page"
                    helper_text_mode: "persistent"
                        
                MDRaisedButton:
                    text: "Submit"
                    md_bg_color: app.theme_cls.primary_color
                    text_color: app.theme_cls.text_color
                    on_release: app.switch_screen('main_screen')
