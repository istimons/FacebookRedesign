<MenuTabScreen>:

    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        
        MenuTopBarContent:

        ScrollView:
            do_scroll_y: True
            effect_cls: 'ScrollEffect'
            bar_width: dp(2)

            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True

                MenuCenterCardsContent:

                MenuSeeMoreContentItems:


<MenuTopBarContent@MDCard>:
    orientation: 'vertical'
    size_hint_y: None
    adaptive_height: True
    

    MDBoxLayout:
        size_hint_y: None
        height: dp(60)
        spacing: dp(5)
        md_bg_color: 'lightgrey'      
        padding: [0, 0, 10, 0]

        MDLabel:
            size_hint: (None, None)
            pos_hint: {'center_y':.5}
            size: dp(0.4), dp(30)


        Avatar:
            source: 'assets/images/logo/icon.png'
            pos_hint: {"center_y": .5}
            radius: [30, ]
        MDBoxLayout:
            orientation: "vertical"
            padding: 0, 0, 0, "20dp" 
            spacing: dp(2)

            Label:
                markup: True
                text: 'John Doe'
                theme_text_color: 'Custom'
                size: self.texture_size
                size_hint_y: None
                size_hint_x: None
                font_size: '15sp'
                color: app.theme_cls.opposite_bg_normal
                bold: True

            MDLabel:
                text: 'See your profile'
                height: self.texture_size[1]
                theme_text_color: 'Custom'
                size_hint_y: None
                bold: True
                font_size: '12sp'
                color: [.5, .5, .5, 1] 
                shorten: True
                markup: True
                shorten_from: 'right'  

        MDBoxLayout:
            size_hint_x: dp(1)
            padding: 0, 0, 0, "26dp"      
            

            Widget:          


            Avatar:
                source: 'assets/images/logo/icon.png'
                pos_hint: {"center_y": .1, "center_x": .7}
                radius: [30, ]

    MDSeparator:
        md_bg_color: 'grey'


