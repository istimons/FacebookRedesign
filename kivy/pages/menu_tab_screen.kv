<MenuSeeMoreContentItems@MDBoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    adaptive_height: True
    padding: [0, 0, 0, 40]          
    
    MDList:

        MDSeparator:
            md_bg_color: 'grey'      


        TwoLineIconListItem:
            text: "Help & support"
            secondary_text: "Get help "
            divider: None
                                
            IconLeftWidget:
                icon: 'help'      

        MDSeparator:
            md_bg_color: 'grey'      


        TwoLineIconListItem:
            text: "Settings and privacy"
            secondary_text: "Privacy and settings"
            divider: None
                                
            IconLeftWidget:
                icon: 'store'                


    MDFlatButton:
        text: 'Log out'
        md_bg_color: 'teal'
        theme_text_color: 'Custom'
        text_color: 'white'
        pos_hint: {"center_x": .5, "center_y": 0}
        size_hint: (1, 0.2)     
        on_press: app.switch_screen('log_in_screen')           